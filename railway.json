{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "python -m venv /opt/venv && . /opt/venv/bin/activate && pip install --no-cache-dir -r scrapers/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd scrapers && /opt/venv/bin/python api-server.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

