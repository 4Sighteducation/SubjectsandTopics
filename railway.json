{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install --no-cache-dir --upgrade --force-reinstall -r scrapers/requirements.txt"
  },
  "deploy": {
    "startCommand": "cd scrapers && python api-server.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

